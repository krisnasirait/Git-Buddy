<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/git_buddy_dark_primary</item>
        <item name="colorPrimaryVariant">@color/git_buddy_dark_primary_variant</item>
        <item name="colorOnPrimary">@color/git_buddy_dark_on_primary</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/git_buddy_dark_secondary</item>
        <item name="colorSecondaryVariant">@color/git_buddy_dark_primary_variant</item>
        <item name="colorOnSecondary">@color/git_buddy_dark_on_secondary</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/git_buddy_dark_background</item>
        <item name="colorSurface">@color/git_buddy_dark_surface</item>

        <!-- Error colors -->
        <item name="colorError">@color/git_buddy_dark_error</item>
        <item name="colorOnError">@color/git_buddy_dark_on_surface</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/git_buddy_dark_primary</item>

        <!-- Font family -->
        <item name="fontFamily">@font/roboto_regular</item>

        <!-- Text color -->
        <item name="gitBuddyTextColorPrimary">@color/git_buddy_secondary</item>
        <item name="gitBuddyTextColorPrimaryVariant">@color/git_buddy_secondary</item>
        <item name="gitBuddyTextColorSecondary">@color/git_buddy_dark_on_background</item>

        <!-- Floating color -->
        <!-- Floating color -->
        <item name="gitBuddyFloatingPrimary">@color/git_buddy_dark_surface</item>
        <item name="gitBuddyFloatingSecondary">@color/git_buddy_dark_on_surface</item>

    </style>
</resources>