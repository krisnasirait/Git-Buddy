<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/git_buddy_primary</item>
        <item name="colorPrimaryVariant">@color/git_buddy_primary_variant</item>
        <item name="colorOnPrimary">@color/git_buddy_secondary</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/git_buddy_secondary</item>
        <item name="colorSecondaryVariant">@color/git_buddy_primary_variant</item>
        <item name="colorOnSecondary">@color/git_buddy_primary</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/git_buddy_background</item>
        <item name="colorSurface">@color/git_buddy_surface</item>

        <!-- Error colors -->
        <item name="colorError">@color/git_buddy_error</item>
        <item name="colorOnError">@color/git_buddy_on_error</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/git_buddy_primary</item>

        <!-- Font family -->
        <item name="fontFamily">@font/roboto_regular</item>

        <!-- Text color -->
        <item name="gitBuddyTextColorPrimary">@color/git_buddy_primary</item>
        <item name="gitBuddyTextColorPrimaryVariant">@color/git_buddy_primary_variant</item>
        <item name="gitBuddyTextColorSecondary">@color/git_buddy_secondary</item>

    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/git_buddy_primary</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="Theme.GitBuddy.NoActionBar" parent="Theme.GitBuddy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>